<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.a3m1l.views.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:popUpTo="@menu/menu"
            app:popUpToInclusive="true"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_firstFragment_to_secondFragment2"
            app:destination="@id/secondFragment" />

    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.a3m1l.views.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second">

        <argument
            android:name="getArg"
            app:argType="string"
            android:defaultValue="Beto"/>
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="Beto"/>
        <argument
            android:name="paswword"
            app:argType="string"
            android:defaultValue="Beto"/>

    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.a3m1l.views.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" >
    </fragment>
    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.a3m1l.views.NotesFragment"
        android:label="fragment_notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/action_notesFragment_to_writeNoteFragment"
            app:destination="@id/writeNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/writeNoteFragment"
        android:name="com.example.a3m1l.views.WriteNoteFragment"
        android:label="fragment_write_note"
        tools:layout="@layout/fragment_write_note" />
</navigation>